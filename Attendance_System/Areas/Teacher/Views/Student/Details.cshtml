@model Attendance_System.DTO.UserDto

@{
    ViewBag.Title = "Manage";
}

<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xs-offset-0 col-sm-offset-0 col-md-offset-3 col-lg-offset-3 toppad">
            <br /><br />
            <h2>Student</h2>
          
            <div class="panel panel-info">
                <div class="panel-heading">
                    <h3 class="panel-title"></h3>
                </div>
                <div class="panel-body" style="font-size:1.2em;">
                    <div class="row">
                        <div class="col-md-3 col-lg-3 " align="center"> <img alt="User Pic" src="https://www.sonypark360.net/wp-content/uploads/2017/08/profile-pictures.png" class="img-circle img-responsive"> </div>

                        <div class=" col-md-9 col-lg-9 ">
                            <table class="table table-user-information">
                                <tbody>
                                   
                                <tr>
                                    <td style="font-weight: bold;">User Name: @Html.DisplayFor(model => model.Email)</td>                               
                                </tr>
                                <tr>
                                    <td style="font-weight: bold;">First Name:@Html.DisplayFor(model => model.FirstName) </td>
                                </tr>
                                <tr>
                                    <td style="font-weight: bold;">Last Name:@Html.DisplayFor(model => model.LastName) </td>
                                </tr>
                                <tr>
                                    <td style="font-weight: bold;">Email:@Html.DisplayFor(model => model.PhoneNumber) </td>
                                </tr>

                                </tbody>
                            </table>
                        </div>
                        <div class="col-md-3 col-lg-3 " align="center">
                            <h3>Attendance:</h3>
                        </div>
                        <div class="col-md-9 col-lg-9" style="padding-top:50px">
                            <table class="table table-user-information">
                                <tbody>
                                    
                                    <tr>
                                        <td style="font-weight: bold;">Backend:</td>
                                    </tr>
                                    <tr>
                                        <td style="font-weight: bold;">Frontend:</td>
                                    </tr>
                                    <tr>
                                        <td style="font-weight: bold;">Interface:</td>
                                    </tr>
                                    <tr>
                                        <td style="font-weight: bold;">Database:</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        </div>
                    </div>                  
                       

                </div>
            @Html.ActionLink("Back to list", "Index", null, new { @class = "btn btn-primary" })
            </div>
        </div>
    </div>
</div>



