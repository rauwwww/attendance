@model IEnumerable<Attendance_System.Models.Course>

@{
    ViewBag.Title = "Index";
}

<h2>Courses</h2>


        <p>
            @Html.ActionLink("Create new Course", "Create", null, new { @class = "btn btn-primary" })
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.CourseName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Start)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.End)
                    </th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CourseName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Start)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.End)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", null, new { id=item.CourseId }, new { @class = "btn btn-primary" })
                        @Html.ActionLink("Details", "Details", null, new { id=item.CourseId }, new { @class = "btn btn-primary" })
                        @Html.ActionLink("Delete", "Delete", null, new { id = item.CourseId }, new { @class = "btn btn-danger" })
                    </td>
             </tr>
                }
            </tbody>

        </table>

