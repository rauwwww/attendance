@model IEnumerable<Attendance_System.Models.Enrollment>

@{
    ViewBag.Title = "Index";
}

<h2>Enrollments</h2>



        <p>
            @Html.ActionLink("Create Enrollment", "Create", null, new { @class = "btn btn-primary" })
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ApplicationUser.FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ApplicationUser.LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Course.CourseName)
                </th>
                <th></th>
            </tr>

        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ApplicationUser.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ApplicationUser.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Course.CourseName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id=item.EnrollmentId }, new { @class = "btn btn-primary" }) 
                    @Html.ActionLink("Details", "Details", new { id=item.EnrollmentId }, new { @class = "btn btn-primary" }) 
                    @Html.ActionLink("Delete", "Delete", new { id=item.EnrollmentId }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }

        </table>

